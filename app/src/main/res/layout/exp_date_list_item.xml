<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/transaction_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">


            <TextView
                android:id="@+id/exp_list_category_icon"
                android:layout_width="@dimen/category_icon_shape_small"
                android:layout_height="@dimen/category_icon_shape_small"
                android:layout_weight="0"
                android:background="@drawable/category_icon_drawable"
                android:padding="@dimen/category_icon_shape_padding_small"
                android:text="@string/x"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/category_icon_txt_size_small" />

            <TextView
                android:id="@+id/exp_list_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                tools:text="test" />

            <TextView
                android:id="@+id/exp_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="test" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>